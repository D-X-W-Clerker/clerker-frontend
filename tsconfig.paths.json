{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@apis": ["apis/index.ts"],
            "@apis/*": ["apis/*"],

            "@assets": ["assets/index.ts"],
            "@assets/*": ["assets/*"],

            "@components": ["components/index.ts"],
            "@components/*": ["components/*"],

            "@pages": ["pages/index.ts"],
            "@pages/*": ["pages/*"],

            "@store": ["store/index.ts"],
            "@store/*": ["store/*"],

            "@styles": ["styles/index.ts"],
            "@styles/*": ["styles/*"],

            "@utils": ["utils/index.ts"],
            "@utils/*": ["utils/*"],

            "@data": ["data/index.ts"],
            "@data/*": ["data/*"]
        }
    }
}
